<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HardwareShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="materialButtonStyle">@style/ButtomStyle</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="fontFamily">@font/vazir_medium</item>
    </style>

    <style name="BottomNavigationView.DeActive" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="fontFamily">@font/vazir_medium</item>
    </style>
    <style name="CustomProgressBarAmazing" parent="android:Widget.ProgressBar.Horizontal">

        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_amazing</item>
    </style>
    <style name="ButtomStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="backgroundTint">@color/green_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeApperance.App.SmallComponnet</item>

    </style>
    <style name="ShapeApperance.App.SmallComponnet" parent="ShapeAppearance.MaterialComponents.SmallComponent"
        >
        <item name="cornerSize">@dimen/_12sdp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.Green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="materialButtonStyle">@style/ButtomStyle</item>
    </style>

    <style name="Theme.Blue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/vazir_medium</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <item name="materialButtonStyle">@style/ButtomStyle</item>
    </style>

</resources>



